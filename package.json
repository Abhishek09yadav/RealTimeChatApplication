{
  "name": "my-monorepo",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently --names \"FE,BE\" -c \"blue.bold,magenta.bold\" \"npm run frontend:start\" \"npm run backend:start\"",
    "frontend:start": "npm run dev --prefix frontend",
    "backend:start": "npm run dev --prefix backend",
    "bootstrap": "npm install && npm install --prefix frontend && npm install --prefix backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
